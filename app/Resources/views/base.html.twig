<!-- Vue principale qui sera réutilisée dans toutes les vues (ici se trouve header et footer) -->
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <!-- Titre du site -->
        <title>{% block title %}Nos amis les oiseaux{% endblock %}</title>
        <!-- Bootstrap -->
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <!-- Fichier css utilisant Assetic -->
        {% stylesheets 'bundles/portailweb/css/styles.css' filter='cssrewrite, scssphp' %}
            <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
        {% endstylesheets %}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    </head>
    <body>

        {# Header #}
        <header class="row">
            <nav class="navbar navbar-default">
                <div class="container">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="{{ path('portail_web_homepage') }}">
                            <img src=" {{ asset('images/logo.jpg') }} " alt="Logo NAO" id="logo">
                        </a>
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="collapse navbar-collapse" id="myNavbar">
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="{{ path('portail_web_homepage') }}">ACCUEIL</a></li>
                            <li><a href="#">OBSERVATIONS</a></li>
                            <li><a href="#">RECHERCHE</a></li>
                            <li><a href="#">MON COMPTE</a></li>
                            <li><a href="#">CONTACT</a></li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        
        {# Contenu #}
        {% block body %}
        {% endblock %}

        {# Footer #}
        <footer class="container-fluid text-center">
            <p>Copyright</p>
        </footer>

    </body>
</html>