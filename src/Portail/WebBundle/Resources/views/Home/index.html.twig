{# Hérite de la vue parente situé app/Resources/views/base.html.twig #}
{% extends "::base.html.twig" %}

{# Vue accueil (sans header ni footer) #}
{% block body %}
	{# Image background perroquet #}
	<div style="background-image: url({{ asset('images/background.jpg') }});" class="backgroundImage">
		{# Encart connexion/créer un compte #}
		<div class="text-center" id="boiteConnexion">
			<h1 style="text-shadow: 1px 1px black; padding: 0; margin: 0">Bienvenue sur notre Application</h1> <br>

			<p style="font-weight: lighter; margin-bottom: 50px;">Avant de saisir vos observations d'oiseaux vous devez vous identifier. Si vous n'avez pas de compte, cliquez sur créer un compte.</p>

			<div class="row">
				<button class="col-sm-offset-1 col-sm-4 btn btn-secondary btn-lg" style="color: #485156; margin-right: 15px">CONNEXION</button>
				<button class="col-sm-6 btn btn-success btn-lg">CRÉER UN COMPTE</button>				
			</div>
		</div>

	</div>
{% endblock %}